<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".SalesFragment">

    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Express"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Analytics"
                android:textColor="#111827"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/currentRangeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="All Time"
                android:textColor="#6B7280"
                android:textSize="14sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/timeFilterGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWeek"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Week" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMonth"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipYear"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAllTime"
                    style="@style/FilterChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="All Time" />
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/revenueCard"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardBackgroundColor="#22C55E"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/iconRevenue"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_revenue_icon"
                                app:tint="@android:color/white"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/labelRevenue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Revenue"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                app:layout_constraintTop_toTopOf="@id/iconRevenue"
                                app:layout_constraintBottom_toBottomOf="@id/iconRevenue"
                                app:layout_constraintStart_toEndOf="@id/iconRevenue"
                                android:layout_marginStart="8dp" />

                            <TextView
                                android:id="@+id/valueRevenue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$5799.96"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ordersCard"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#3B82F6" app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/iconOrders" android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_orders_icon"
                                app:tint="@android:color/white"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/labelOrders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Orders"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                app:layout_constraintTop_toTopOf="@id/iconOrders"
                                app:layout_constraintBottom_toBottomOf="@id/iconOrders"
                                app:layout_constraintStart_toEndOf="@id/iconOrders"
                                android:layout_marginStart="8dp" />

                            <TextView
                                android:id="@+id/valueOrders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="76"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/itemsSoldCard"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp" app:cardBackgroundColor="#A855F7" app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/iconItemsSold" android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_items_icon"
                                app:tint="@android:color/white"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/labelItemsSold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Items Sold"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                app:layout_constraintTop_toTopOf="@id/iconItemsSold"
                                app:layout_constraintBottom_toBottomOf="@id/iconItemsSold"
                                app:layout_constraintStart_toEndOf="@id/iconItemsSold"
                                android:layout_marginStart="8dp" />

                            <TextView
                                android:id="@+id/valueItemsSold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="576"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/customersCard"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#EC4899" app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/iconCustomers"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_customers_icon"
                                app:tint="@android:color/white"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <TextView
                                android:id="@+id/labelCustomers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Customers" android:textColor="@android:color/white"
                                android:textSize="14sp"
                                app:layout_constraintTop_toTopOf="@id/iconCustomers"
                                app:layout_constraintBottom_toBottomOf="@id/iconCustomers"
                                app:layout_constraintStart_toEndOf="@id/iconCustomers"
                                android:layout_marginStart="8dp" />

                            <TextView
                                android:id="@+id/valueCustomers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="96"
                                android:textColor="@android:color/white"
                                android:textSize="22sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/segmentTabs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/tab_layout_bg"
                android:padding="4dp"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicatorAnimationMode="elastic"
                app:tabIndicatorGravity="stretch"
                app:tabIndicator="@drawable/tab_indicator"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="#111827"
                app:tabTextColor="#6B7280"
                app:tabTextAppearance="@style/SegmentTabTextStyle" >

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customers" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Items" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orders" />

            </com.google.android.material.tabs.TabLayout>

            <FrameLayout
                android:id="@+id/segmentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:id="@+id/customersContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Customers"
                        android:textColor="#111827"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerRecentCustomers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        tools:itemCount="1"/>
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>