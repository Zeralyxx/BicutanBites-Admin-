<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodOrderingAppAdmin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.FoodOrderingAppAdmin" parent="Base.Theme.FoodOrderingAppAdmin" />

    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color_selector</item>
        <item name="chipBackgroundColor">@color/chip_background_color_selector</item>
        <item name="chipStrokeColor">@color/chip_stroke_color_selector</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="SegmentTabTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.App.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ItemChipStyle" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">#374151</item>
        <item name="chipBackgroundColor">#F3F4F6</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <!-- Define all required color styles for each status -->

    <!-- 1. PENDING (Yellow/Amber) -->
    <style name="Widget.App.ExposedDropdownMenu.Pending" parent="Widget.App.ExposedDropdownMenu">
        <item name="boxBackgroundColor">#FEF9C3</item> <!-- Light Yellow -->
        <item name="startIconTint">#D97706</item>
        <item name="endIconTint">#D97706</item>
        <item name="android:textColorHint">#D97706</item>
        <item name="android:textColor">#D97706</item>
    </style>

    <!-- 2. BEING MADE (Blue) -->
    <style name="Widget.App.ExposedDropdownMenu.Made" parent="Widget.App.ExposedDropdownMenu">
        <item name="boxBackgroundColor">#E0F2FE</item> <!-- Light Blue -->
        <item name="startIconTint">#0284C7</item>
        <item name="endIconTint">#0284C7</item>
        <item name="android:textColorHint">#0284C7</item>
        <item name="android:textColor">#0284C7</item>
    </style>

    <!-- 3. BEING DELIVERED (Violet/Purple) -->
    <style name="Widget.App.ExposedDropdownMenu.Delivered" parent="Widget.App.ExposedDropdownMenu">
        <item name="boxBackgroundColor">#EDE9FE</item> <!-- Light Purple -->
        <item name="startIconTint">#7C3AED</item>
        <item name="endIconTint">#7C3AED</item>
        <item name="android:textColorHint">#7C3AED</item>
        <item name="android:textColor">#7C3AED</item>
    </style>

    <!-- 4. CANCELLED (Red) - Already defined, included for completeness -->
    <style name="Widget.App.ExposedDropdownMenu.Cancelled" parent="Widget.App.ExposedDropdownMenu">
        <item name="boxBackgroundColor">#FEE2E2</item> <!-- Light Red -->
        <item name="startIconTint">#DC2626</item>
        <item name="endIconTint">#DC2626</item>
        <item name="android:textColorHint">#DC2626</item>
        <item name="android:textColor">#DC2626</item>
    </style>

    <!-- Style for Rounding ImageViews in Admin Menu -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>